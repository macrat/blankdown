{
  "name": "blankdown",
  "version": "1.0.0",
  "description": "yet yet yet another markdown editor",
  "main": "server/index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/server",
    "test": "`npm bin`/mocha --require babel-core/register --invert --fgrep blackbox",
    "test:blackbox": "`npm bin`/mocha --require babel-core/register --fgrep blackbox",
    "test:all": "`npm bin`/mocha --require babel-core/register",
    "build": "`npm bin`/npm-run-all --serial build:client build:server",
    "build:client": "NODE_ENV=production `npm bin`/webpack",
    "build:server": "NODE_ENV=production `npm bin`/babel server/* common/* -d dist/ && ln -sf ../static ../build dist/",
    "debug": "`npm bin`/npm-run-all --parallel debug:postgres debug:build debug:start-delay",
    "debug:start-delay": "sleep 5s; npm run debug:start",
    "debug:start": "nodemon ./server --exec babel-node",
    "debug:build": "`npm bin`/webpack --watch",
    "debug:postgres": "docker run --rm -e POSTGRES_USER=test -e POSTGRES_PASSWORD=test -e POSTGRES_DB=blankdown -p 5432:5432 postgres",
    "postinstall": "npm run build"
  },
  "author": "MacRat <m@crat.jp>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.2",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "express-async-router": "^0.1.12",
    "highlight.js": "^9.12.0",
    "lodash": "^4.17.4",
    "lodash-es": "^4.17.4",
    "marked": "^0.3.7",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.4",
    "npm-run-all": "^4.1.2",
    "pg": "^7.4.0",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "uuid": "^3.1.0",
    "vue": "^2.5.9",
    "vue-codemirror-lite": "^1.0.3",
    "vue-loader": "^13.5.0",
    "vue-perfect-scrollbar": "0.0.14",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.9",
    "vuex": "^3.0.1",
    "webpack": "^3.9.1"
  },
  "devDependencies": {
    "mocha": "^4.0.1",
    "power-assert": "^1.4.4"
  }
}
