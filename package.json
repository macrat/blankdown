{
  "name": "blankdown",
  "version": "1.0.0",
  "description": "yet yet yet another markdown editor",
  "main": "server/index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./build/server.js",
    "test": "`npm bin`/mocha --require babel-core/register",
    "build": "VERSION_CODE=`git rev-parse --short HEAD || date +%m%d%H%M` NODE_ENV=production `npm bin`/webpack",
    "debug": "`npm bin`/npm-run-all --parallel debug:postgres debug:build debug:start-delay",
    "debug:start-delay": "sleep 5s; npm run debug:start",
    "debug:start": "nodemon -w ./build/ ./build/server.js",
    "debug:build": "VERSION_CODE=`git rev-parse --short HEAD || date +%m%d%H%M` `npm bin`/webpack --watch",
    "debug:postgres": "docker run --rm -e POSTGRES_USER=test -e POSTGRES_PASSWORD=test -e POSTGRES_DB=blankdown -p 5432:5432 postgres",
    "postinstall": "npm run build"
  },
  "author": "MacRat <m@crat.jp>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "codemirror": "^5.33.0",
    "codemirror-widgets": "github:macrat/codemirror-widgets#master",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "express-async-router": "^0.1.12",
    "highlight.js": "^9.12.0",
    "lodash-es": "^4.17.4",
    "marked": "^0.3.7",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.4",
    "npm-run-all": "^4.1.2",
    "pg": "^7.4.0",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "uuid": "^3.1.0",
    "vue": "^2.5.9",
    "vue-codemirror-lite": "^1.0.3",
    "vue-loader": "^13.5.0",
    "vue-perfect-scrollbar": "0.0.14",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.9",
    "vuex": "^3.0.1",
    "webpack": "^3.9.1",
    "webpack-node-externals": "^1.6.0"
  },
  "devDependencies": {
    "mocha": "^4.0.1",
    "power-assert": "^1.4.4",
    "sleep": "^5.1.1"
  }
}
